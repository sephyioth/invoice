<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/m_Layout_Outside"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-2dp"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/m_Layout_Inside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_default"
        android:layout_marginLeft="@dimen/widget_padding_defalut"
        android:layout_marginRight="@dimen/widget_padding_defalut"
        android:layout_marginTop="@dimen/text_margin_default"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_qq"
            android:layout_width="@dimen/image_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/umeng_socialize_qq_on" />


        <ImageView
            android:id="@+id/image_qzone"
            android:layout_width="@dimen/image_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/umeng_socialize_qzone_on" />


        <ImageView
            android:id="@+id/image_wb"
            android:layout_width="@dimen/image_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/umeng_socialize_sina_on" />


        <ImageView
            android:id="@+id/image_wc"
            android:layout_width="@dimen/image_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/umeng_socialize_wechat" />

        <ImageView
            android:id="@+id/image_wcc"
            android:layout_width="@dimen/image_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/umeng_socialize_wxcircle" />
    </LinearLayout>
</LinearLayout>